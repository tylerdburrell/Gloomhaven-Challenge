<%- include("partials/header"); -%>

<!-- Heading/explanation of website -->
<section id="header">
  <div class="container-fluid heading-container">
    <h1 class="big-heading">Gloomhaven Challenge Mode!</h1>
    <h3 class="small-heading">Add the characters in your party to see your challenge</h3>
  </div>
</section>

<!-- Add Character button -->
<section id="roll-button">
  <div class="container-fluid button-container">
    <select id="class-select" class="" name="">
      <option value="Brute">Brute</option>
      <option value="Cragheart">Cragheart</option>
      <option value="Mindthief">Mindthief</option>
      <option value="Scoundrel">Scoundrel</option>
      <option value="Spellweaver">Spellweaver</option>
      <option value="Tinkerer">Tinkerer</option>
      <option value="Two Minis">Two Minis</option>
      <option value="Angry Face">Angry Face</option>
      <option value="Eclipse">Eclipse</option>
      <option value="Three Spears">Three Spears</option>
      <option value="Triangles">Triangles</option>
      <option value="Sun">Sun</option>
      <option value="Circles">Circles</option>
      <option value="Lightning">Lightning</option>
      <option value="Music Note">Music Note</option>
      <option value="Saw">Saw</option>
      <option value="Cthulhu">Cthulhu</option>
    </select>
    <div class="">
      <button class="btn btn-dark btn-lrg roll-button" onclick="addChar()" type="button" name="button">Add Character <i
          class="fas fa-plus"></i></button>
    </div>
  </div>
</section>

<!-- Challenge results -->
<section id=players>
  <div class="container-fluid challenge-container">
    <div class="row">
      <% for(var i = 0; i < negative.length; i++) {
        <div class="col">
            <img id="class-img2" src="class-img" style="display:none;">
            <p id="neg2" style="display:none;">Negative: <%= negative[i]%></p>
            <p id="pos2" style="display:none;">Positive: <%= positive[i]%></p>
        </div>
    <% } %>
  </div>
  </div>
</section>

<script src=scripts/scripts.js type="text/javascript"></script>

<%- include("partials/footer"); -%>